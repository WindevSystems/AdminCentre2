<%= render "dashboards/navbar" %>
<div class="container mt-5">
  <h1 class="mb-4">User Blacklist</h1>

  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">User ID</th>
        <th scope="col">Reason</th>
        <th scope="col">Level</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
    <% if @user_blacklist %>
        <% @user_blacklist.each do |user_blacklist| %>
            <tr>
                <td><%= user_blacklist.userid %></td>
                <td><%= user_blacklist.reason %></td>
                <td><%= user_blacklist.level %></td>
                <td>
                    <% if current_admin.support? %>
                        <p><i class="fa-solid fa-lock"></i> No Permission</p>
                    <% else %>
                        <%= link_to 'Show', user_blacklist_path(user_blacklist.userid), class: 'btn btn-primary' %>
                        <%= link_to 'Edit', edit_user_blacklist_path(user_blacklist.userid), class: 'btn btn-warning' %>
                        <%= link_to 'Destroy', user_blacklist_path(user_blacklist.userid), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>                    <% end %>
                </td>
            </tr>
        <% end %>
    <% end %>
    </tbody>
    </table>

  <%= link_to 'New User Blacklist', new_user_blacklist_path, class: 'btn btn-primary' %>
</div>